
@model (Books book, List<AuthorDTO> authorDTO, List<BookTypeDTO> bookTypeDTO)

<h3 class="text-center">book add</h3>
<form method="post" asp-controller="Book" asp-action="Create" asp-area="Managment">
    <div class="mb-3">
        <input type="text" class="form-control" asp-for="book.Name" placeholder="book name"  />
        <span asp-validation-for="book.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input type="text" class="form-control" asp-for="@Model.book.PageCount" placeholder="page count"  />
        <span asp-validation-for="book.PageCount" class="text-danger"></span>
    </div>
     
    <div class="dropdown mb-3">        
            <select asp-for="book.BookTypesID" class="form-control" asp-items="@(new SelectList(Model.bookTypeDTO, "ID", "Name"))" >
            <option value="" disabled selected hidden>Select Book Type</option>
            </select>
    </div>

    <div class="dropdown mb-3">
        <select asp-for="book.AuthorsID" class="form-control" asp-items="@(new SelectList(Model.authorDTO, "ID", "FullName"))" >
            <option value="" disabled selected hidden>Select Author</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">add</button>
</form>
